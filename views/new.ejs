<%- include ('partials/header') %>

<div class ="container">
<h1> Add a New Rv</h1>

<form action="/rvs/add" method="POST" enctype="multipart/form-data">

<div class="form-group">
	<label for="year">Year</label>
	<input type="text" name="year" class="form-control">
</div>
<div class="form-group">
	<label for="make">Make</label>
	<input type="text" name="make" class="form-control">
</div>
<div class="form-group">
	<label for="model">Model</label>
	<input type="text" name="model" class="form-control">
</div>
<div class="form-group">
	<label for="image1">Exterior Image</label>
	<input type="file" name="image1" class="form-control">
</div>
<div class="form-group">
	<label for="image2">Interior Image</label>
	<input type="file" name="image2" class="form-control">
</div>
<div class="form-group">
	<label for="image">Layout Image</label>
	<input type="file" name="image3" class="form-control">
</div>
<div class="form-group">
	<label for="type">Type</label>
	<input type="text" name="type" class="form-control">
</div>
<div class="form-group">
	<label for="price">Price</label>
	<input type="text" name="price" class="form-control">
</div>
<div class="form-group">
	<label for="description">Description</label>
	<input type="text" name="description" class="form-control">
</div>
<div class="form-group">
	<label for="stock">Stock Number</label>
	<input type="text" name="stock" class="form-control">
</div>
<div class="form-group">
	<label for="location">Location</label>
	<input type="text" name="location" class="form-control">
</div>

<div class="form-group">
<button type="submit" class="btn btn-info">Save</buton>
</div>

</form>
<a href="/">Cancel</a>
</div>

<%- include ('partials/footer') %>